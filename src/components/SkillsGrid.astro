---
import { FaHtml5, FaCss3Alt, FaJs, FaReact, FaAngular, FaVuejs, FaNodeJs, FaDocker } from 'react-icons/fa';
import { SiTailwindcss, SiAstro, SiSpringboot, SiTypescript,  SiMongodb, SiFigma, SiKubernetes } from 'react-icons/si';

const skills = {
	"Front-End": [
		{ name: 'HTML', icon: FaHtml5 },
		{ name: 'CSS', icon: FaCss3Alt },
		{ name: 'JavaScript', icon: FaJs },
		{ name: 'React', icon: FaReact },
		{ name: 'Angular', icon: FaAngular },
		{ name: 'Astro', icon: SiAstro },
		{ name: 'Tailwind CSS', icon: SiTailwindcss },
		{ name: 'Vue.js', icon: FaVuejs },
	],
	"Back-End": [
		{ name: 'Node.js', icon: FaNodeJs },
		{ name: 'Spring Boot', icon: SiSpringboot },
		{ name: 'MongoDB', icon: SiMongodb },
	],
	"Dev-Ops": [
		{ name: 'Docker', icon: FaDocker },
		{ name: 'Kubernetes', icon: SiKubernetes },
	],
	"UI/UX": [
		{ name: 'Figma', icon: SiFigma },
	],
};
---

<div class="skills-grid">
	{Object.entries(skills).map(([category, items]) => (
		<div class="skill-category">
			<h3>{category}</h3>
			<ul>
				{items.map(({ name, icon: Icon }) => (
					<li>
						<Icon size="2em" />
					</li>
				))}
			</ul>
		</div>
	))}
</div>

<style>
	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 3rem;
		margin-top: 3rem;
		margin-bottom: 3rem;
	}

	.skill-category {
		background-color: var(--gray-999);
		border-radius: 1rem;
		padding: 1.5rem;
		box-shadow: var(--shadow-sm);
	}

	.skill-category h3 {
		font-size: 1.5rem;
		color: var(--gray-300);
		margin-bottom: 1rem;
		text-align: center;
	}

	.skill-category ul {
		list-style-type: none;
		padding: 0;
		margin: 0;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
	}

	.skill-category li {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		color: var(--accent-regular);
	}

	.skill-category li span {
		font-size: 1rem;
		text-align: center;
		color: var(--gray-300);
	}

	@media (min-width: 768px) {
		.skill-category ul {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	@media (min-width: 1200px) {
		.skills-grid {
			grid-template-columns: repeat(4, 1fr);
		}
	}
</style>
