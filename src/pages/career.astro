---
import BaseLayout from "../layouts/BaseLayout.astro";
import ScrollFade from "../components/ScrollFade";
import Hero from "../components/Hero.astro";
import { FaBriefcase, FaCode, FaGraduationCap } from "react-icons/fa";
import ContactCTA from "../components/ContactCTA.astro";

const timelineData = [
  {
    year: "February 2024 - May 2024",
    title: "Full Stack Developer internship",
    business_url: "https://eviden.com/",
    business_name: "Eviden",
    description:
      "Interned as a full stack developer, doing a 4-week training with the company's technologies such as Spring Boot and Angular, their company policies with Git, and the work methodology 'Agile' they use for teamwork. and a month and a half of feedback doing a group project with the technologies learned, which include aws, keycloak, docker among them.",
    icon: FaCode,
  },
  {
    year: "May 2024 - Present",
    title: "Full Stack Developer",
    business_url: "https://eviden.com/",
    business_name: "Eviden",
    description:
      "I am currently working as a Junior Full-Stack Developer at Eviden, a company that specializes in developing software solutions to different industries around the world. My role involves working on the development of web applications using as main technologies like Angular, Spring Boot, and PostgreSQL.",
    icon: FaBriefcase,
  },
  {
    year: "Present - Future",
    title: "Senior Developer",
    business_url: "https://novadevs-eu.netlify.app",
    business_name: "Nova Devs",
    description:
      "My goal is to continue growing as a developer and become a Senior Developer in the near future. I am passionate about learning new technologies and improving my skills to become a better developer. And I am working separately in an organisation called Nova Devs in which I am involved, creating both individual and group projects, and growing as a programmer.",
    icon: FaGraduationCap,
  },
];
---

<BaseLayout
  title="Career | Ceradev"
  description="Learn about the career trajectory of César A. Suárez Orizondo"
>
  <div class="stack gap-20 lg:gap-32">
    <!-- Main Content -->
    <main class="wrapper stack gap-20 lg:gap-32">
      
      <!-- Intro Section -->
      <ScrollFade client:load className="intro">
        <section class="intro">
          <header>
            <Hero
              title="My Career"
              tagline="Explore my career journey and experience in the tech industry."
              align="start"
            />
          </header>
        </section>
      </ScrollFade>

      <!-- Timeline Section -->
      <ScrollFade client:load className="timeline">
        <section class="timeline">
          {timelineData.map((item, index) => (
            <ScrollFade client:visible className="timeline-item">
              <div
                class={`timeline-item ${index % 2 === 0 ? "left" : "right"}`}
                id={`timeline-item-${index}`}
              >
                <div class="timeline-icon">{<item.icon size="2em" />}</div>
                <div class="timeline-content">
                  <h3>{item.title}</h3>
                  <span class="timeline-year">{item.year}</span>
                  <h4>
                    <a href={item.business_url} target="_blank">
                      {item.business_name}
                    </a>
                  </h4>
                  <p>{item.description}</p>
                </div>
              </div>
            </ScrollFade>
          ))}
        </section>
      </ScrollFade>
    </main>

    <!-- Contact Section -->
    <ContactCTA />
  </div>
</BaseLayout>

<style>
  /* General Styles */
  .intro {
    margin-top: 2rem;
  }

  .timeline {
    position: relative;
    margin: 2rem 0;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  .timeline-item {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: row;
    gap: 2rem;
  }

  .timeline-item.right {
    flex-direction: row-reverse;
  }

  /* Timeline Icon */
  .timeline-icon {
    background-color: var(--accent-regular);
    color: white;
    padding: 1rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin: 0 1rem;
  }

  /* Timeline Content */
  .timeline-content {
    max-width: 45%;
    background-color: var(--gray-999);
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: var(--shadow-sm);
    text-align: left;
  }

  .timeline-year {
    font-size: 1.2rem;
    color: var(--accent-regular);
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .timeline-content h3 {
    color: var(--gray-300);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .timeline-content h4 {
    color: var(--gray-400);
    font-size: 1.2rem;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  .timeline-content h4 a {
    text-decoration: underline;
    color: var(--gray-400);
  }

  .timeline-content h4 a:hover {
    text-decoration: underline;
    color: var(--accent-regular);
    transition: all 0.3s;
    cursor: pointer;
  }

  .timeline-content p {
    color: var(--gray-400);
    font-size: 1rem;
    line-height: 1.6;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .timeline-content {
      max-width: 100%;
    }

    .timeline-item {
      flex-direction: column;
    }

    .timeline-item.right {
      flex-direction: column;
    }
  }
</style>
